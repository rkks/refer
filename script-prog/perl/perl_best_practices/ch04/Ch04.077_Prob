# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;

CLIENT:
for my $n (0..10) {
    my $finished = $n % 2;
    next CLIENT if not $finished;    # Much nicer than: if !$finished
    print "$n\n";
}

