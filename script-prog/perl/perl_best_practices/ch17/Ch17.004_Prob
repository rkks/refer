# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;

my %seen;
sub prompt_line {
    return prompt -line, @_;
}

# Print only unique lines (retaining their order)...
INPUT:
while (my $line = prompt_line '> ') {
    next INPUT if $seen{$line};
    print $line;
    $seen{$line} = 1;
}

