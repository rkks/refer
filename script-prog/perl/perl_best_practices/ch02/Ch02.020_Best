# Standard modules...
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;


while (my $line = <DATA>) {
    chomp $line;
 
    if ( $line =~ s{\A (\s*) -- (.*)}{$1#$2}xms ) {
        push @comments, $2;
    }
 
    print $line;
}

use Data::Dumper 'Dumper';
warn Dumper [ @comments ];

__DATA__
-- A comment
A line
-- another comment
