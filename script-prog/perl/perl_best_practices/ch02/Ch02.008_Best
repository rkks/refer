# Standard modules...
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;


while (my $record = <$results_file>) {
    chomp $record;
    my ($name, $votes) = split "\t", $record;
    print 'Votes for ',
          substr($name, 0, 10),        # Parens needed for precedence
          ": $votes (verified)\n";
}

