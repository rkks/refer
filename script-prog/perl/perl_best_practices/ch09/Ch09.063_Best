# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;


use List::Util qw( min max );
 
sub clip_to_range {
    my ($min, $max, @data) = @_;
 
    return map { max( $min, min($max, $_) ) } @data;
}


use Data::Dumper 'Dumper';
warn Dumper [
    clip_to_range(2,9 => 1,3,5,-2,99,11,9,8 )
];
