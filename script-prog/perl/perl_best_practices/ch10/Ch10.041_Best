# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;

use Perl6::Slurp;
my $file_name = $PROGRAM_NAME;
          
# Read "human" paragraphs (separated by two or more whitespace-only lines)...
my @paragraphs = slurp $file_name, {irs => qr/\n \s* \n/xms};   


use Data::Dumper 'Dumper';
warn Dumper [ @paragraphs ];
