# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;

my @frames = 1..2;
my %active = (
    top    => 99,
    prev   => 98,
    backup => 42,
);

$frames[@frames-1] = $active{top};         # Final frame
$frames[@frames-2] = $active{prev};        # Penultimate frame
$frames[@frames-3] = $active{backup};      # Prepenultimate frame


use Data::Dumper 'Dumper';
warn Dumper [ @frames ];
