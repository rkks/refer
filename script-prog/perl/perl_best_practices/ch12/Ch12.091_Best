# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;


COMMAND:
for my $cmd ('a'..'z') {
    if ($cmd !~ m{\A [adiqrwx] \z}xms) {
        carp "Unknown command: $cmd";
        next COMMAND;
    }
}

