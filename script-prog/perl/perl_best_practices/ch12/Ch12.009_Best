# Standard modules...
use strict;
use warnings;
use IO::Prompt;
use Carp;
use English qw( -no_match_vars );
use Data::Alias;
use Readonly;

my $text = <<'END_TEXT';
    line 1     
line 2       
           line3
END_TEXT

# Remove leading and trailing whitespace...
$text =~ s{\A \s* | \s* \z}{}gxm;


use Data::Dumper 'Dumper';
warn Dumper [ $text ];
