<project name="smart_ticket-web" default="all" basedir=".">

  <target name="all" depends="init,compile,package" />

  <target name="init">
    <property file="${user.home}/smart_ticket.properties" />
    <property name="build.dir" value="../build" />
    <property name="shared.src.dir" value="../../../shared/src" />
    <property name="shared.rsrc.l10n.dir" value="../../../shared/src/rsrc/l10n" />
    <property name="src.dir" value="." />
    <property name="rsrc.dir" value="${src.dir}/rsrc" />
    <property name="tmp.dir" value="${build.dir}/tmp" />
    <property name="ejb.dir" value="../../ejb/" />
  </target>

  <target name="compile">
    <mkdir dir="${tmp.dir}" />
    <mkdir dir="${tmp.dir}/WEB-INF/lib" />
    <copy todir="${tmp.dir}/WEB-INF/lib"
          file="${ejb.dir}/build/smart_ticket-ejb-client.jar"
          overwrite="true" />
    <mkdir dir="${tmp.dir}/WEB-INF/classes" />
    <javac destdir="${tmp.dir}/WEB-INF/classes"
           classpath="${J2EE.HOME}/lib/j2ee.jar:${tmp.dir}/WEB-INF/lib/smart_ticket-ejb-client.jar"
           includes="**/*.java"
           excludes="**/smartticket/web/**, **/SCCS/**,**/CVS/**">
      <src path="${shared.src.dir}" />
      <src path="${src.dir}" />
    </javac>
  </target>

  <target name="package" depends="compile">
    <mkdir dir="${build.dir}" />

    <copy todir="${tmp.dir}/WEB-INF" 
          file="${src.dir}/web.xml" 
          overwrite="true" />
    <copy todir="${tmp.dir}/WEB-INF/rsrc/l10n">
      <fileset dir="${shared.rsrc.l10n.dir}" includes="**/*.properties" />
    </copy>          
    <copy todir="${tmp.dir}">
      <fileset dir="${src.dir}/docroot" includes="**/*.jsp, **/*.gif" />
    </copy>          
    <copy todir="${tmp.dir}/WEB-INF">
      <fileset dir="${src.dir}" includes="Populate-UTF8.xml" />
    </copy>          
    <copy todir="${tmp.dir}">
      <fileset dir="${rsrc.dir}" excludes="**/SCCS/**,**/CVS/**" />
    </copy>          

    <jar basedir="${tmp.dir}" 
         jarfile="${build.dir}/smart_ticket.war" />
  </target>

  <target name="clean" depends="init">
    <delete dir="${build.dir}" />
  </target>

</project>
